<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EdtitextInput">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratregular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:padding">14dp</item>
        <item name="android:background">@drawable/bg_editext</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/material_grey500</item>
    </style>

    <style name="ButtonPurple" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratbold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/material_white</item>
        <item name="android:background">@drawable/bg_btn_purple_round</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="ButtonTransparent" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratregular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="ButtonStroke" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratregular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_btn_purple_stroke</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>


    <style name="TextBold">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratbold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratmedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextSmall">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratmedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextRegular">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/montserratregular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/material_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

</resources>
